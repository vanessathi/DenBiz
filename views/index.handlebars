<!-- start of search body -->
<div class="container">
  <div class="headerHome">
    <h1>Welcome to DENBIZ!</h1>
    <h2>Your ultimate directory of small businesses in Denver.</h2>
    &nbsp;
    <h3>Find any restaurant, bakery, home repair service, and more by using our search bar below.
    </h3>
    <!-- Custom rounded search bars with input group -->
    <form action="submit">
      <div class="input-group mb-4 border rounded-pill p-1">
        <div class="input-group-prepend border-0">
          <button id="searchform" type="button" class="btn btn-link text-info"><i class="fa fa-search"></i></button>
        </div>
        <input type="search" placeholder="Search by business name, e.g. Torchy's Tacos" aria-describedby="searchform"
          id="search" class="form-control bg-none border-0">
      </div>
    </form>
    <a class="exploreLink" href="/business">View all businesses instead</a>
  </div>

{{!-- new MAP section --}}
 <div class="container">
  <div class="row border-0 my-4">
    <div class="col-lg-8 mx-auto">
      <h5 class="font-weight-light mb-4 font-italic text-white">Search Results</h5>
      <div class="bg-white p-4 rounded shadow">

<div id="style-selector-control" class="map-control">
      <input type="radio" name="show-hide" id="hide-poi"
          class="selector-control">
      <label for="hide-poi">Hide</label>
      <input type="radio" name="show-hide" id="show-poi"
          class="selector-control" checked="checked">
      <label for="show-poi">Show</label>
    </div>
    <div id="map"></div>
         
      </div>
    </div>
  </div>
</div>

  {{!-- new section --}}
<div class="container">
  <div class="row border-0 my-5">
    <div class="col-lg-8 mx-auto spotlightBiz">
      <h2 class="">Small Business Spotlight</h2>
      <div class="bg-white p-5 rounded shadow">
        <!-- business of the week -->
        <div class="businessOfTheWeek card border-info mb-3 shadow">
          {{!-- insert business name in card-header --}}
          <div class="card-header">{{name}}</div>
          <img class="image card-img-top"
            src="https://images.unsplash.com/photo-1571204829887-3b8d69e4094d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80"
            alt="shop local!">
          <div class="card-body">
            <h6 class="card-title">Business Classification: {{category}} </h6>
            <p class="card-text">About {{name}}:</p>
            <p class="card-text">{{description}}</p>
            <p class="card-text"><small class="text-muted">Last updated: May 08 2020</small></p>
          </div>
          <div class="card-footer bg-transparent border-info">
            <div class="container">
              Address: {{address}} | Phone Number: {{contactNumber}}
            </div>
            <div class="container">
              Website: {{website}} | Email: {{email}}
            </div>
          </div>
        </div>
      </div>
      <!-- end of business of the week card -->
    </div>
  </div>
</div>

